<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Owner</field>
        <field>Name</field>
        <field>Client__c</field>
        <field>Type_d_emetteur__c</field>
        <field>Categorie_de_la_facture__c</field>
        <field>Entete_de_facture__c</field>
        <field>Date_de_demarrage__c</field>
        <field>Date_de_fin__c</field>
        <field>TVA_applicable__c</field>
        <field>N_identifiant_du_cout__c</field>
        <field>Precision_sur_le_cout__c</field>
        <field>Prestation_de_transport__c</field>
        <field>Type_de_cout__c</field>
        <field>Cout_mensuel_attendu_TTC__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>ajaouen@lab-cerba.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>true</formula>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Approbation</label>
        <name>Approbation</name>
    </approvalStep>
    <description>Processus de Création/Mise en place d’une nouvelle facture (Coût)</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Cout_de_transport__c.Statut__c</field>
            <operation>notEqual</operation>
            <value>Validé par la direction commerciale</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>CdT_Notification_demande_approuvee</name>
            <type>Alert</type>
        </action>
        <action>
            <name>FU_CdT_Statut_Approuv</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>CdT_Notification_demande_rejet_e</name>
            <type>Alert</type>
        </action>
        <action>
            <name>FU_CdT_Statut_Rejete</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>FU_CdT_Statut_En_attente_de_validation</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>CdT.APP2.Création d&#39;une nouvelle facture</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>FU_CdT_Statut_Brouillon</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
