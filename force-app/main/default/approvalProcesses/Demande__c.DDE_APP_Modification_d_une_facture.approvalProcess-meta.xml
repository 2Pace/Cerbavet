<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Facture_directe__c</field>
        <field>Montant_forfait_mensuel_TTC__c</field>
        <field>Debut_d_application_de_la_modification__c</field>
        <field>RecordType</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>ajaouen@lab-cerba.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Approbation</label>
        <name>Approbation</name>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Demande__c.RecordType</field>
            <operation>equals</operation>
            <value>Demande de modification d&#39;une facture</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>DDE_Modification_Facture_Approuv_e</name>
            <type>Alert</type>
        </action>
        <action>
            <name>FU_DDE_Statut_Approuv_e</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>DDE_Modification_Facture_Rejet_e</name>
            <type>Alert</type>
        </action>
        <action>
            <name>FU_DDE_Statut_Rejete</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>FU_DDE_Statut_En_attente_d_approbation</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>DDE.APP.Modification d&#39;une facture</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>FU_DDE_Statut_nouvelle</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
